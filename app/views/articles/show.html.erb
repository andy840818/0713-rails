<h1>
  <%= @article.title %>
</h1>

<div data-ocntroller="like" 
     data-liked="<%= current_user.liked?(@article) %>"
     data-id = "<%= @article.id %>" >

  <a href="#" data-like-target='likebtn' 
              data-action="click->like#toggle"> 讚 </a>
</div>


<article>
  <p><%= @article.content %></p>
</article>

<hr>

<h2>留言</h2>


<%= form_with(model: [@article, @comment]) do |f| %>
  <div>
    <%= f.label :content, '留言內容' %><br />
    <%= f.text_area :content%>
  </div>

  <%= f.submit '新增留言'%>
<% end %>

<ul id="comment_list">
  <%= render @comments %>
</ul>

<hr>
